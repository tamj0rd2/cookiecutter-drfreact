{
  "name": "{{cookiecutter.project_slug}}",
  "version": "{{cookiecutter.project_version}}",
  "description": "{{cookiecutter.project_description}}",
  "main": "{{cookiecutter.react_entrypoint}}",
  "scripts": {
    "hot-reload": "node webpack/server.js",
    "build-local": "webpack --config webpack/local.config.js --progress --colors",
    "build-prod": "webpack --config webpack/prod.config.js --progress --colors",
    {% if cookiecutter.heroku_deployment_method == 'auto' %}
    "postinstall": "webpack --config webpack/prod.config.js --progress --colors",
    {% endif %}
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "{{cookiecutter.project_author}}",
  "license": "",
  "engines": {
    "node": "4.6.0",
    "npm": "3.10.5"
  },
  "dependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-react": "^6.16.0",
    "jquery": "^3.1.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "webpack": "^1.13.2",
    "webpack-bundle-tracker": "0.0.93"
    {% if cookiecutter.use_bootstrap == 'y' %}
    ,"bootstrap": "^3.3.7",
    "bootstrap-webpack": "0.0.5",
    "css-loader": "^0.25.0",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "imports-loader": "^0.6.5",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7"
    {% endif %}
  },
  "devDependencies": {
    "eslint": "^3.7.1",
    "eslint-plugin-react": "^6.3.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "webpack-dev-server": "^1.16.2"
  }
}
